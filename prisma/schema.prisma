generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PetSize {
  LITTLE
  MID
  BIG
}

enum PetAge {
  PUPPY
  ADULT
}

model Org {
  id    String @id @default(uuid())
  name  String
  email String @unique
  phone String
  city  String
  pets  Pet[]

  @@map("orgs")
}

model Pet {
  id          String  @id @default(uuid())
  name        String
  description String?
  age         PetAge
  size        PetSize

  org    Org    @relation(fields: [org_id], references: [id])
  org_id String

  @@map("pets")
}
